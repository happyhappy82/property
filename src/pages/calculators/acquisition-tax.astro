<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }
  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }
  function getSingleHomeTaxRate(price) {
    if (price <= 600000000) return 0.01
    if (price >= 900000000) return 0.03
    return 0.01 + ((price - 600000000) / 300000000) * 0.02
  }
  function getAcquisitionTaxRate(price, housingCount, isRegulated) {
    if (housingCount === 1) return getSingleHomeTaxRate(price)
    if (housingCount === 2) return isRegulated ? 0.08 : getSingleHomeTaxRate(price)
    return isRegulated ? 0.12 : 0.08
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }
  setupNumberInput(document.getElementById('purchasePrice'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const raw = document.getElementById('purchasePrice').value.replace(/,/g, '')
    const purchasePrice = parseInt(raw) || 0
    const housingCount = parseInt(document.getElementById('housingCount').value)
    const isRegulated = document.getElementById('isRegulated').checked
    const isFirstTimeBuyer = document.getElementById('isFirstTimeBuyer').checked

    if (purchasePrice <= 0) {
      document.getElementById('errorText').textContent = '매매가격을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const taxRate = getAcquisitionTaxRate(purchasePrice, housingCount, isRegulated)
    let acqTax = Math.round(purchasePrice * taxRate)
    const discount = isFirstTimeBuyer && housingCount === 1 ? Math.min(2000000, acqTax) : 0
    acqTax -= discount
    const localEduTax = Math.round(acqTax * 0.1)
    const ruralTax = purchasePrice > 600000000 ? Math.round(purchasePrice * 0.002) : 0
    const totalTax = acqTax + localEduTax + ruralTax
    const effectiveRate = Math.round((totalTax / purchasePrice) * 10000) / 100

    document.getElementById('totalTax').textContent = formatManWon(totalTax)
    document.getElementById('effectiveRate').textContent = effectiveRate + '%'
    document.getElementById('acqTax').textContent = formatManWon(acqTax)
    document.getElementById('taxRateDisplay').textContent = (Math.round(taxRate * 10000) / 100) + '%'
    document.getElementById('localEduTax').textContent = formatManWon(localEduTax)
    document.getElementById('ruralTax').textContent = formatManWon(ruralTax)

    const discountRow = document.getElementById('discountRow')
    if (discount > 0) {
      document.getElementById('discount').textContent = '-' + formatManWon(discount)
      discountRow.classList.remove('hidden')
    } else {
      discountRow.classList.add('hidden')
    }

    resultsEl.classList.remove('hidden')
  })
</script>
