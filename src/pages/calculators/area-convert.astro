                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">0.0929</td>
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">1</td>
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">0.0000230</td>
              </tr>
              <tr class="bg-gray-50 dark:bg-gray-800/50">
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2 font-medium">1acre</td>
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">1,224.17</td>
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">4,046.86</td>
                <td class="border border-gray-200 dark:border-gray-600 px-3 py-2">43,560</td>
