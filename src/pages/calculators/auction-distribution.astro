<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function calculateAuctionDistribution(salePrice, auctionCost, seniorClaim, tenantDeposit, juniorClaim) {
    let remaining = salePrice
    const distributions = []

    const auctionDist = Math.min(remaining, auctionCost)
    distributions.push({
      name: '경매비용',
      claim: auctionCost,
      distributed: Math.round(auctionDist),
      satisfied: auctionDist >= auctionCost,
      shortfall: Math.round(Math.max(0, auctionCost - auctionDist))
    })
    remaining -= auctionDist

    const seniorDist = Math.min(remaining, seniorClaim)
    distributions.push({
      name: '선순위채권',
      claim: seniorClaim,
      distributed: Math.round(seniorDist),
      satisfied: seniorDist >= seniorClaim,
      shortfall: Math.round(Math.max(0, seniorClaim - seniorDist))
    })
    remaining -= seniorDist

    const tenantDist = Math.min(remaining, tenantDeposit)
    distributions.push({
      name: '임차보증금',
      claim: tenantDeposit,
      distributed: Math.round(tenantDist),
      satisfied: tenantDist >= tenantDeposit,
      shortfall: Math.round(Math.max(0, tenantDeposit - tenantDist))
    })
    remaining -= tenantDist

    const juniorDist = Math.min(remaining, juniorClaim)
    distributions.push({
      name: '후순위채권',
      claim: juniorClaim,
      distributed: Math.round(juniorDist),
      satisfied: juniorDist >= juniorClaim,
      shortfall: Math.round(Math.max(0, juniorClaim - juniorDist))
    })
    remaining -= juniorDist

    distributions.push({
      name: '소유자 잔여금',
      claim: 0,
      distributed: Math.round(remaining),
      satisfied: true,
      shortfall: 0
    })

    const totalDistributed = auctionDist + seniorDist + tenantDist + juniorDist + remaining

    return {
      totalSalePrice: salePrice,
      totalDistributed: Math.round(totalDistributed),
      distributions
    }
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }
  setupNumberInput(document.getElementById('salePrice'))
  setupNumberInput(document.getElementById('auctionCost'))
  setupNumberInput(document.getElementById('seniorClaim'))
  setupNumberInput(document.getElementById('tenantDeposit'))
  setupNumberInput(document.getElementById('juniorClaim'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const salePrice = parseInt(document.getElementById('salePrice').value.replace(/,/g, '')) || 0
    const auctionCost = parseInt(document.getElementById('auctionCost').value.replace(/,/g, '')) || 0
    const seniorClaim = parseInt(document.getElementById('seniorClaim').value.replace(/,/g, '')) || 0
    const tenantDeposit = parseInt(document.getElementById('tenantDeposit').value.replace(/,/g, '')) || 0
    const juniorClaim = parseInt(document.getElementById('juniorClaim').value.replace(/,/g, '')) || 0

    if (salePrice <= 0) {
      document.getElementById('errorText').textContent = '매각대금을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateAuctionDistribution(salePrice, auctionCost, seniorClaim, tenantDeposit, juniorClaim)

    document.getElementById('totalSalePrice').textContent = formatManWon(result.totalSalePrice)
    document.getElementById('totalDistributed').textContent = formatManWon(result.totalDistributed)

    const distributionList = document.getElementById('distributionList')
    distributionList.innerHTML = ''
    result.distributions.forEach((dist, index) => {
      const div = document.createElement('div')
      div.className = 'border-b border-gray-200 dark:border-gray-700 pb-2 last:border-0'

      const statusColor = dist.satisfied ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'
      const statusText = dist.satisfied ? '(완전배당)' : '(미완)'

      div.innerHTML = `
        <div class="flex justify-between mb-1">
          <span class="text-sm font-medium dark:text-gray-200">${index + 1}. ${dist.name} <span class="${statusColor} text-xs">${statusText}</span></span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="dark:text-gray-400">채권액</span>
          <span class="dark:text-gray-300">${formatManWon(dist.claim)}</span>
        </div>
        <div class="flex justify-between text-sm">
          <span class="dark:text-gray-400">배당액</span>
          <span class="font-medium dark:text-gray-200">${formatManWon(dist.distributed)}</span>
        </div>
        ${dist.shortfall > 0 ? `<div class="flex justify-between text-sm">
          <span class="dark:text-gray-400">부족액</span>
          <span class="text-red-600 dark:text-red-400">${formatManWon(dist.shortfall)}</span>
        </div>` : ''}
      `
      distributionList.appendChild(div)
    })

    resultsEl.classList.remove('hidden')
  })
</script>
