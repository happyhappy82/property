<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }
  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function getVal(id) {
    return parseInt(document.getElementById(id).value.replace(/,/g, '')) || 0
  }

  // Rate tables
  const HOUSING_SALE = [
    { min: 0, max: 50000000, rate: 0.006, maxFee: 250000 },
    { min: 50000000, max: 200000000, rate: 0.005, maxFee: 800000 },
    { min: 200000000, max: 900000000, rate: 0.004, maxFee: null },
    { min: 900000000, max: 1200000000, rate: 0.005, maxFee: null },
    { min: 1200000000, max: 1500000000, rate: 0.006, maxFee: null },
    { min: 1500000000, max: Infinity, rate: 0.007, maxFee: null }
  ]

  const HOUSING_LEASE = [
    { min: 0, max: 50000000, rate: 0.005, maxFee: 200000 },
    { min: 50000000, max: 100000000, rate: 0.004, maxFee: 300000 },
    { min: 100000000, max: 600000000, rate: 0.003, maxFee: null },
    { min: 600000000, max: 1200000000, rate: 0.004, maxFee: null },
    { min: 1200000000, max: 1500000000, rate: 0.005, maxFee: null },
    { min: 1500000000, max: Infinity, rate: 0.006, maxFee: null }
  ]

  const OFFICETEL_SALE_RATE = 0.005
  const OFFICETEL_LEASE_RATE = 0.004
  const COMMERCIAL_RATE = 0.009

  function getBracket(amount, brackets) {
    for (const bracket of brackets) {
      if (amount >= bracket.min && amount < bracket.max) {
        return bracket
      }
    }
    return brackets[brackets.length - 1]
  }

  function calculateFee(amount, transactionType, propertyType) {
    let bracket
    let rate
    let maxFee = null

    if (propertyType === 'housing') {
      if (transactionType === 'sale') {
        bracket = getBracket(amount, HOUSING_SALE)
      } else {
        bracket = getBracket(amount, HOUSING_LEASE)
      }
      rate = bracket.rate
      maxFee = bracket.maxFee
    } else if (propertyType === 'officetel') {
      rate = transactionType === 'sale' ? OFFICETEL_SALE_RATE : OFFICETEL_LEASE_RATE
    } else {
      rate = COMMERCIAL_RATE
    }

    let fee = Math.round(amount * rate)
    if (maxFee !== null && fee > maxFee) {
      fee = maxFee
    }

    return { fee, rate, maxFee }
  }

  // Setup inputs
  setupNumberInput(document.getElementById('transactionAmount'))
  setupNumberInput(document.getElementById('deposit'))
  setupNumberInput(document.getElementById('monthlyRent'))

  // Transaction type change handler
  document.getElementById('transactionType').addEventListener('change', function() {
    const transactionAmountField = document.getElementById('transactionAmountField')
    const depositField = document.getElementById('depositField')
    const monthlyRentField = document.getElementById('monthlyRentField')

    if (this.value === 'monthly') {
      transactionAmountField.classList.add('hidden')
      depositField.classList.remove('hidden')
      monthlyRentField.classList.remove('hidden')
    } else {
      transactionAmountField.classList.remove('hidden')
      depositField.classList.add('hidden')
      monthlyRentField.classList.add('hidden')
    }

    document.getElementById('results').classList.add('hidden')
    document.getElementById('error').classList.add('hidden')
  })

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const transactionType = document.getElementById('transactionType').value
    const propertyType = document.getElementById('propertyType').value
    const includeVAT = document.getElementById('includeVAT').checked

    let amount = 0

    if (transactionType === 'monthly') {
      const deposit = getVal('deposit')
      const monthlyRent = getVal('monthlyRent')

      if (deposit <= 0 && monthlyRent <= 0) {
        document.getElementById('errorText').textContent = '보증금 또는 월세를 입력해주세요.'
        errorEl.classList.remove('hidden')
        return
      }

      // Calculate conversion amount
      const baseAmount = deposit + (monthlyRent * 100)
      if (baseAmount < 50000000) {
        amount = deposit + (monthlyRent * 70)
      } else {
        amount = baseAmount
      }
    } else {
      amount = getVal('transactionAmount')

      if (amount <= 0) {
        document.getElementById('errorText').textContent = '거래금액을 입력해주세요.'
        errorEl.classList.remove('hidden')
        return
      }
    }

    const { fee, rate, maxFee } = calculateFee(amount, transactionType === 'monthly' ? 'lease' : transactionType, propertyType)
    const vatAmount = Math.round(fee * 0.1)
    const totalWithVAT = fee + vatAmount

    // Display results
    document.getElementById('totalFee').textContent = formatManWon(fee)
    document.getElementById('amountDisplay').textContent = formatManWon(amount)
    document.getElementById('feeRate').textContent = (Math.round(rate * 10000) / 100) + '%'

    // VAT row
    const vatRow = document.getElementById('vatRow')
    const vatAmountRow = document.getElementById('vatAmountRow')
    if (includeVAT) {
      document.getElementById('totalWithVAT').textContent = formatManWon(totalWithVAT)
      document.getElementById('vatAmount').textContent = formatManWon(vatAmount)
      vatRow.classList.remove('hidden')
      vatAmountRow.classList.remove('hidden')
    } else {
      vatRow.classList.add('hidden')
      vatAmountRow.classList.add('hidden')
    }

    // Max fee rows
    const maxRateRow = document.getElementById('maxRateRow')
    const maxFeeRow = document.getElementById('maxFeeRow')
    if (maxFee !== null) {
      document.getElementById('maxRate').textContent = (Math.round(rate * 10000) / 100) + '%'
      document.getElementById('maxFee').textContent = formatManWon(maxFee)
      maxRateRow.classList.remove('hidden')
      maxFeeRow.classList.remove('hidden')
    } else {
      maxRateRow.classList.add('hidden')
      maxFeeRow.classList.add('hidden')
    }

    resultsEl.classList.remove('hidden')
  })
</script>
