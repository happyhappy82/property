<script>
  const SQM_TO_PYEONG = 0.3025

  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function calculateBuildingPrice(area, constructionPrice, structureIndex, useIndex, locationIndex, ageRate) {
    const pricePerSqm = Math.round(constructionPrice * structureIndex * useIndex * locationIndex * (ageRate / 100))
    const standardPrice = Math.round(area * pricePerSqm)
    const pricePerPyeong = Math.round(pricePerSqm / SQM_TO_PYEONG)

    return { standardPrice, pricePerSqm, pricePerPyeong }
  }

  setupNumberInput(document.getElementById('constructionPrice'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const area = parseFloat(document.getElementById('area').value) || 0
    const constructionPrice = parseInt(document.getElementById('constructionPrice').value.replace(/,/g, '')) || 0
    const structureIndex = parseFloat(document.getElementById('structureIndex').value) || 0
    const useIndex = parseFloat(document.getElementById('useIndex').value) || 0
    const locationIndex = parseFloat(document.getElementById('locationIndex').value) || 0
    const ageRate = parseFloat(document.getElementById('ageRate').value) || 0

    if (area <= 0) {
      document.getElementById('errorText').textContent = '건물면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (constructionPrice <= 0) {
      document.getElementById('errorText').textContent = '건물신축가격기준액을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (structureIndex <= 0) {
      document.getElementById('errorText').textContent = '구조지수를 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (useIndex <= 0) {
      document.getElementById('errorText').textContent = '용도지수를 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (locationIndex <= 0) {
      document.getElementById('errorText').textContent = '위치지수를 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (ageRate < 0 || ageRate > 100) {
      document.getElementById('errorText').textContent = '경과연수별잔가율은 0~100 사이의 값을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateBuildingPrice(area, constructionPrice, structureIndex, useIndex, locationIndex, ageRate)

    document.getElementById('standardPrice').textContent = formatManWon(result.standardPrice)
    document.getElementById('pricePerSqm').textContent = formatManWon(result.pricePerSqm)
    document.getElementById('pricePerPyeong').textContent = formatManWon(result.pricePerPyeong)

    resultsEl.classList.remove('hidden')
  })
</script>
