<script>
  const SQM_TO_PYEONG = 0.3025

  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9.]/g, '')
      if (raw && !isNaN(parseFloat(raw))) {
        this.value = raw
      } else if (raw === '') {
        this.value = ''
      }
    })
  }

  function calculateBuildingRatio(landArea, buildingArea, totalFloorArea, floors) {
    const buildingCoverageRatio = (buildingArea / landArea) * 100
    const floorAreaRatio = (totalFloorArea / landArea) * 100
    const avgFloorArea = totalFloorArea / floors

    const buildingAreaPyeong = buildingArea * SQM_TO_PYEONG
    const totalFloorAreaPyeong = totalFloorArea * SQM_TO_PYEONG
    const landAreaPyeong = landArea * SQM_TO_PYEONG

    return {
      buildingCoverageRatio: buildingCoverageRatio.toFixed(2),
      floorAreaRatio: floorAreaRatio.toFixed(2),
      avgFloorArea: avgFloorArea.toFixed(2),
      buildingAreaSqm: buildingArea.toFixed(2),
      buildingAreaPyeong: buildingAreaPyeong.toFixed(2),
      totalFloorAreaSqm: totalFloorArea.toFixed(2),
      totalFloorAreaPyeong: totalFloorAreaPyeong.toFixed(2),
      landAreaSqm: landArea.toFixed(2),
      landAreaPyeong: landAreaPyeong.toFixed(2),
    }
  }

  setupNumberInput(document.getElementById('landArea'))
  setupNumberInput(document.getElementById('buildingArea'))
  setupNumberInput(document.getElementById('totalFloorArea'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const landArea = parseFloat(document.getElementById('landArea').value) || 0
    const buildingArea = parseFloat(document.getElementById('buildingArea').value) || 0
    const totalFloorArea = parseFloat(document.getElementById('totalFloorArea').value) || 0
    const floors = parseInt(document.getElementById('floors').value) || 0

    if (landArea <= 0) {
      document.getElementById('errorText').textContent = '대지면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (buildingArea <= 0) {
      document.getElementById('errorText').textContent = '건축면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (totalFloorArea <= 0) {
      document.getElementById('errorText').textContent = '연면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (floors <= 0) {
      document.getElementById('errorText').textContent = '층수를 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateBuildingRatio(landArea, buildingArea, totalFloorArea, floors)

    document.getElementById('buildingCoverageRatio').textContent = result.buildingCoverageRatio + '%'
    document.getElementById('floorAreaRatio').textContent = result.floorAreaRatio + '%'
    document.getElementById('avgFloorArea').textContent = formatNumber(parseFloat(result.avgFloorArea)) + ' ㎡'

    document.getElementById('landAreaDisplay').textContent = formatNumber(parseFloat(result.landAreaSqm)) + ' ㎡ (' + formatNumber(parseFloat(result.landAreaPyeong)) + ' 평)'
    document.getElementById('buildingAreaDisplay').textContent = formatNumber(parseFloat(result.buildingAreaSqm)) + ' ㎡ (' + formatNumber(parseFloat(result.buildingAreaPyeong)) + ' 평)'
    document.getElementById('totalFloorAreaDisplay').textContent = formatNumber(parseFloat(result.totalFloorAreaSqm)) + ' ㎡ (' + formatNumber(parseFloat(result.totalFloorAreaPyeong)) + ' 평)'

    resultsEl.classList.remove('hidden')
  })
</script>
