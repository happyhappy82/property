<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatDate(date) {
    const year = date.getFullYear()
    const month = String(date.getMonth() + 1).padStart(2, '0')
    const day = String(date.getDate()).padStart(2, '0')
    return `${year}년 ${month}월 ${day}일`
  }

  const modeRadios = document.querySelectorAll('input[name="mode"]')
  const diffMode = document.getElementById('diffMode')
  const addMode = document.getElementById('addMode')

  modeRadios.forEach(radio => {
    radio.addEventListener('change', (e) => {
      if (e.target.value === 'diff') {
        diffMode.classList.remove('hidden')
        addMode.classList.add('hidden')
      } else {
        diffMode.classList.add('hidden')
        addMode.classList.remove('hidden')
      }
      document.getElementById('resultsDiff').classList.add('hidden')
      document.getElementById('resultsAdd').classList.add('hidden')
    })
  })

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsDiffEl = document.getElementById('resultsDiff')
    const resultsAddEl = document.getElementById('resultsAdd')
    errorEl.classList.add('hidden')
    resultsDiffEl.classList.add('hidden')
    resultsAddEl.classList.add('hidden')

    const mode = document.querySelector('input[name="mode"]:checked').value

    if (mode === 'diff') {
      const startDateStr = document.getElementById('startDate').value
      const endDateStr = document.getElementById('endDate').value
      const includeStart = document.getElementById('includeStart').checked

      if (!startDateStr) {
        document.getElementById('errorText').textContent = '시작일을 입력해주세요.'
        errorEl.classList.remove('hidden')
        return
      }

      if (!endDateStr) {
        document.getElementById('errorText').textContent = '종료일을 입력해주세요.'
        errorEl.classList.remove('hidden')
        return
      }

      const startDate = new Date(startDateStr)
      const endDate = new Date(endDateStr)

      if (isNaN(startDate.getTime())) {
        document.getElementById('errorText').textContent = '시작일이 유효하지 않습니다.'
        errorEl.classList.remove('hidden')
        return
      }

      if (isNaN(endDate.getTime())) {
        document.getElementById('errorText').textContent = '종료일이 유효하지 않습니다.'
        errorEl.classList.remove('hidden')
        return
      }

      if (endDate < startDate) {
        document.getElementById('errorText').textContent = '종료일은 시작일보다 이후여야 합니다.'
        errorEl.classList.remove('hidden')
        return
      }

      const diffMs = endDate.getTime() - startDate.getTime()
      let totalDays = Math.floor(diffMs / (1000 * 60 * 60 * 24))

      if (includeStart) {
        totalDays += 1
      }

      const totalMonths = (totalDays / 30.44).toFixed(1)
      const totalYears = (totalDays / 365.25).toFixed(2)

      document.getElementById('totalDays').textContent = formatNumber(totalDays) + ' 일'
      document.getElementById('totalMonths').textContent = formatNumber(parseFloat(totalMonths)) + ' 개월'
      document.getElementById('totalYears').textContent = formatNumber(parseFloat(totalYears)) + ' 년'

      resultsDiffEl.classList.remove('hidden')
    } else {
      const baseDateStr = document.getElementById('baseDate').value
      const daysToAdd = parseInt(document.getElementById('daysToAdd').value) || 0
      const operation = document.querySelector('input[name="operation"]:checked').value

      if (!baseDateStr) {
        document.getElementById('errorText').textContent = '기준일을 입력해주세요.'
        errorEl.classList.remove('hidden')
        return
      }

      const baseDate = new Date(baseDateStr)

      if (isNaN(baseDate.getTime())) {
        document.getElementById('errorText').textContent = '기준일이 유효하지 않습니다.'
        errorEl.classList.remove('hidden')
        return
      }

      const resultDate = new Date(baseDate)
      if (operation === 'add') {
        resultDate.setDate(resultDate.getDate() + daysToAdd)
      } else {
        resultDate.setDate(resultDate.getDate() - daysToAdd)
      }

      document.getElementById('resultDate').textContent = formatDate(resultDate)

      resultsAddEl.classList.remove('hidden')
    }
  })

  // Set default dates
  const today = new Date()
  const todayStr = today.toISOString().split('T')[0]
  const nextMonth = new Date(today)
  nextMonth.setMonth(nextMonth.getMonth() + 1)
  const nextMonthStr = nextMonth.toISOString().split('T')[0]

  document.getElementById('startDate').value = todayStr
  document.getElementById('endDate').value = nextMonthStr
  document.getElementById('baseDate').value = todayStr
</script>
