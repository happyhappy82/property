<script>
  function formatNumber(num) {
    return Math.round(num).toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) {
      r += formatNumber(eok) + '억'
      if (man > 0) r += ' ' + formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else if (man > 0) {
      r += formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else {
      r += formatNumber(abs) + '원'
    }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function setupDecimalInput(el) {
    el.addEventListener('input', function() {
      let raw = this.value.replace(/[^0-9.]/g, '')
      const parts = raw.split('.')
      if (parts.length > 2) {
        raw = parts[0] + '.' + parts.slice(1).join('')
      }
      this.value = raw
    })
  }

  setupNumberInput(document.getElementById('repaymentAmount'))
  setupDecimalInput(document.getElementById('feeRate'))

  function calculateEarlyRepayment(repaymentAmount, feeRate, remainingDays, totalDays) {
    if (remainingDays > totalDays) {
      throw new Error('대출잔여일수는 대출전체기간보다 클 수 없습니다.')
    }

    const dayRatio = remainingDays / totalDays
    const earlyRepaymentFee = Math.round(repaymentAmount * (feeRate / 100) * dayRatio)
    const netAmount = repaymentAmount - earlyRepaymentFee

    return {
      earlyRepaymentFee,
      netAmount,
      repaymentAmount,
      feeRate,
      dayRatio,
    }
  }

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const repaymentAmount = parseInt(document.getElementById('repaymentAmount').value.replace(/,/g, '')) || 0
    const feeRate = parseFloat(document.getElementById('feeRate').value) || 0
    const loanDateStr = document.getElementById('loanDate').value
    const repaymentDateStr = document.getElementById('repaymentDate').value
    const maturityDateStr = document.getElementById('maturityDate').value

    if (repaymentAmount <= 0 || feeRate < 0 || !loanDateStr || !repaymentDateStr || !maturityDateStr) {
      document.getElementById('errorText').textContent = '모든 항목을 올바르게 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const loanDate = new Date(loanDateStr)
    const repaymentDate = new Date(repaymentDateStr)
    const maturityDate = new Date(maturityDateStr)

    const elapsedDays = Math.floor((repaymentDate - loanDate) / (1000 * 60 * 60 * 24))
    const totalDays = Math.floor((maturityDate - loanDate) / (1000 * 60 * 60 * 24))
    const remainingDays = Math.floor((maturityDate - repaymentDate) / (1000 * 60 * 60 * 24))

    if (elapsedDays < 0 || remainingDays < 0 || totalDays <= 0) {
      document.getElementById('errorText').textContent = '날짜를 올바르게 입력해주세요. (대출일 < 상환일 < 만기일)'
      errorEl.classList.remove('hidden')
      return
    }

    try {
      const result = calculateEarlyRepayment(repaymentAmount, feeRate, remainingDays, totalDays)

      document.getElementById('earlyRepaymentFee').textContent = formatManWon(result.earlyRepaymentFee)
      document.getElementById('netAmount').textContent = formatManWon(result.netAmount)
      document.getElementById('repaymentAmountDisplay').textContent = formatManWon(result.repaymentAmount)
      document.getElementById('feeRateDisplay').textContent = result.feeRate.toFixed(2) + '%'
      document.getElementById('dayRatioDisplay').textContent = (result.dayRatio * 100).toFixed(2) + '%'
      document.getElementById('daysDisplay').textContent = `${elapsedDays}일 / ${totalDays}일 (잔여: ${remainingDays}일)`

      resultsEl.classList.remove('hidden')
    } catch (error) {
      document.getElementById('errorText').textContent = error.message
      errorEl.classList.remove('hidden')
    }
  })
</script>
