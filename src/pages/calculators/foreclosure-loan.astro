<script>
  function formatNumber(num) {
    return Math.round(num).toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) {
      r += formatNumber(eok) + '억'
      if (man > 0) r += ' ' + formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else if (man > 0) {
      r += formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else {
      r += formatNumber(abs) + '원'
    }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  setupNumberInput(document.getElementById('salePrice'))
  setupNumberInput(document.getElementById('appraisalPrice'))

  const LTV_RATES = {
    '1금융권': {
      '무주택자': {
        '수도권': 0.7,
        '비수도권': 0.7,
      },
      '1주택자': {
        '수도권': 0.6,
        '비수도권': 0.6,
      },
      '다주택자': {
        '수도권': 0,
        '비수도권': 0,
      },
    },
    '2금융권': {
      '무주택자': {
        '수도권': 0.8,
        '비수도권': 0.85,
      },
      '1주택자': {
        '수도권': 0.7,
        '비수도권': 0.75,
      },
      '다주택자': {
        '수도권': 0.6,
        '비수도권': 0.6,
      },
    },
  }

  function calculateForeclosureLoan(input) {
    const ltvRate = LTV_RATES[input.financialTier][input.borrowerType][input.region]
    const collateralBase = Math.min(input.salePrice, input.appraisalPrice)
    const maxLoanAmount = Math.round(collateralBase * ltvRate)
    const requiredEquity = Math.round(input.salePrice - maxLoanAmount)

    return {
      ltvRate: ltvRate * 100,
      collateralBase,
      maxLoanAmount,
      requiredEquity,
    }
  }

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const salePrice = parseInt(document.getElementById('salePrice').value.replace(/,/g, '')) || 0
    const appraisalPrice = parseInt(document.getElementById('appraisalPrice').value.replace(/,/g, '')) || 0
    const financialTier = document.getElementById('financialTier').value
    const borrowerType = document.getElementById('borrowerType').value
    const region = document.getElementById('region').value

    if (salePrice <= 0 || appraisalPrice <= 0) {
      document.getElementById('errorText').textContent = '낙찰가와 감정가를 모두 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateForeclosureLoan({
      salePrice,
      appraisalPrice,
      financialTier,
      borrowerType,
      region,
    })

    document.getElementById('ltvRate').textContent = result.ltvRate.toFixed(0) + '%'
    document.getElementById('maxLoanAmount').textContent = formatManWon(result.maxLoanAmount)
    document.getElementById('requiredEquity').textContent = formatManWon(result.requiredEquity)
    document.getElementById('collateralBase').textContent = formatManWon(result.collateralBase)
    document.getElementById('salePriceDisplay').textContent = formatManWon(salePrice)

    resultsEl.classList.remove('hidden')
  })
</script>
