<script>
  const FAIR_MARKET_RATIO = 0.6

  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function roundToWon(amount) {
    return Math.round(amount)
  }

  function calculatePropertyTax(taxBase, isSingleHousehold) {
    if (isSingleHousehold) {
      if (taxBase <= 60000000) {
        return taxBase * 0.0005
      } else if (taxBase <= 150000000) {
        return 30000 + (taxBase - 60000000) * 0.001
      } else if (taxBase <= 300000000) {
        return 120000 + (taxBase - 150000000) * 0.002
      } else {
        return 420000 + (taxBase - 300000000) * 0.0035
      }
    } else {
      if (taxBase <= 60000000) {
        return taxBase * 0.001
      } else if (taxBase <= 150000000) {
        return 60000 + (taxBase - 60000000) * 0.0015
      } else if (taxBase <= 300000000) {
        return 195000 + (taxBase - 150000000) * 0.0025
      } else {
        return 570000 + (taxBase - 300000000) * 0.004
      }
    }
  }

  function calculateComprehensiveTax(comprehensiveTaxBase, housingCount) {
    if (comprehensiveTaxBase <= 0) {
      return 0
    }

    if (housingCount <= 2) {
      if (comprehensiveTaxBase <= 300000000) {
        return comprehensiveTaxBase * 0.005
      } else if (comprehensiveTaxBase <= 600000000) {
        return comprehensiveTaxBase * 0.007 - 600000
      } else if (comprehensiveTaxBase <= 1200000000) {
        return comprehensiveTaxBase * 0.01 - 2400000
      } else if (comprehensiveTaxBase <= 2500000000) {
        return comprehensiveTaxBase * 0.013 - 6000000
      } else if (comprehensiveTaxBase <= 5000000000) {
        return comprehensiveTaxBase * 0.015 - 11000000
      } else if (comprehensiveTaxBase <= 9400000000) {
        return comprehensiveTaxBase * 0.02 - 36000000
      } else {
        return comprehensiveTaxBase * 0.027 - 101800000
      }
    } else {
      if (comprehensiveTaxBase <= 300000000) {
        return comprehensiveTaxBase * 0.005
      } else if (comprehensiveTaxBase <= 600000000) {
        return comprehensiveTaxBase * 0.007 - 600000
      } else if (comprehensiveTaxBase <= 1200000000) {
        return comprehensiveTaxBase * 0.01 - 2400000
      } else if (comprehensiveTaxBase <= 2500000000) {
        return comprehensiveTaxBase * 0.02 - 14400000
      } else if (comprehensiveTaxBase <= 5000000000) {
        return comprehensiveTaxBase * 0.03 - 39400000
      } else if (comprehensiveTaxBase <= 9400000000) {
        return comprehensiveTaxBase * 0.04 - 89400000
      } else {
        return comprehensiveTaxBase * 0.05 - 183400000
      }
    }
  }

  function calculateHoldingTax(publicPrice, isSingleHousehold, housingCount) {
    const taxBase = roundToWon(publicPrice * FAIR_MARKET_RATIO)
    const propertyTax = roundToWon(calculatePropertyTax(taxBase, isSingleHousehold))
    const urbanTax = roundToWon(propertyTax * 0.14)
    const educationTax = roundToWon(propertyTax * 0.2)

    const deduction = (isSingleHousehold && housingCount === 1) ? 1200000000 : 900000000
    const comprehensiveTaxBase = roundToWon(Math.max(0, (publicPrice - deduction) * FAIR_MARKET_RATIO))
    const comprehensiveTax = roundToWon(calculateComprehensiveTax(comprehensiveTaxBase, housingCount))
    const ruralTax = roundToWon(comprehensiveTax * 0.2)

    const totalHoldingTax = propertyTax + urbanTax + educationTax + comprehensiveTax + ruralTax

    return {
      taxBase,
      propertyTax,
      urbanTax,
      educationTax,
      comprehensiveTaxBase,
      comprehensiveTax,
      ruralTax,
      totalHoldingTax
    }
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  setupNumberInput(document.getElementById('publicPrice'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const raw = document.getElementById('publicPrice').value.replace(/,/g, '')
    const publicPrice = parseInt(raw) || 0
    const isSingleHousehold = document.getElementById('isSingleHousehold').checked
    const housingCount = parseInt(document.getElementById('housingCount').value)

    if (publicPrice <= 0) {
      document.getElementById('errorText').textContent = '공시가격을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateHoldingTax(publicPrice, isSingleHousehold, housingCount)

    document.getElementById('totalTax').textContent = formatManWon(result.totalHoldingTax)
    document.getElementById('taxBase').textContent = formatManWon(result.taxBase)
    document.getElementById('propertyTax').textContent = formatManWon(result.propertyTax)
    document.getElementById('urbanTax').textContent = formatManWon(result.urbanTax)
    document.getElementById('educationTax').textContent = formatManWon(result.educationTax)
    document.getElementById('comprehensiveTaxBase').textContent = formatManWon(result.comprehensiveTaxBase)
    document.getElementById('comprehensiveTax').textContent = formatManWon(result.comprehensiveTax)
    document.getElementById('ruralTax').textContent = formatManWon(result.ruralTax)

    resultsEl.classList.remove('hidden')
  })
