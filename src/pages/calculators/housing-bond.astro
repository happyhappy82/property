<script>
  const BOND_RATES = {
    '서울': {
      '60㎡이하': 13 / 1000,
      '60~85㎡': 21 / 1000,
      '85㎡초과': 31 / 1000,
    },
    '광역시': {
      '60㎡이하': 8 / 1000,
      '60~85㎡': 16 / 1000,
      '85㎡초과': 24 / 1000,
    },
    '시지역': {
      '60㎡이하': 6 / 1000,
      '60~85㎡': 13 / 1000,
      '85㎡초과': 21 / 1000,
    },
    '기타': {
      '60㎡이하': 5 / 1000,
      '60~85㎡': 10 / 1000,
      '85㎡초과': 16 / 1000,
    },
  }

  const DISCOUNT_RATE = 0.06

  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function calculateHousingBond(salePrice, region, areaSize) {
    const purchaseRate = BOND_RATES[region][areaSize]
    const bondPurchaseAmount = Math.round(salePrice * purchaseRate)
    const discountCost = Math.round(bondPurchaseAmount * DISCOUNT_RATE)
    const actualBurden = bondPurchaseAmount - discountCost

    return {
      bondPurchaseAmount,
      discountCost,
      actualBurden,
      purchaseRate: Math.round(purchaseRate * 10000) / 10
    }
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }
  setupNumberInput(document.getElementById('salePrice'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const salePrice = parseInt(document.getElementById('salePrice').value.replace(/,/g, '')) || 0
    const region = document.getElementById('region').value
    const areaSize = document.getElementById('areaSize').value

    if (salePrice <= 0) {
      document.getElementById('errorText').textContent = '매매가격을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateHousingBond(salePrice, region, areaSize)

    document.getElementById('actualBurden').textContent = formatManWon(result.actualBurden)
    document.getElementById('purchaseRate').textContent = result.purchaseRate + '‱ (' + (result.purchaseRate / 10).toFixed(2) + '%)'
    document.getElementById('bondPurchaseAmount').textContent = formatManWon(result.bondPurchaseAmount)
    document.getElementById('discountCost').textContent = formatManWon(result.discountCost)

    resultsEl.classList.remove('hidden')
  })
</script>
