<script>
  const TAX_BRACKETS = [
    { limit: 14000000, rate: 0.06, deduction: 0 },
    { limit: 50000000, rate: 0.15, deduction: 1260000 },
    { limit: 88000000, rate: 0.24, deduction: 5760000 },
    { limit: 150000000, rate: 0.35, deduction: 15440000 },
    { limit: 300000000, rate: 0.38, deduction: 19940000 },
    { limit: 500000000, rate: 0.4, deduction: 25940000 },
    { limit: 1000000000, rate: 0.42, deduction: 35940000 },
    { limit: Infinity, rate: 0.45, deduction: 65940000 },
  ]

  const BASIC_DEDUCTION_PER_PERSON = 1500000

  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function roundToWon(amount) {
    return Math.round(amount)
  }

  function calculateIncomeTax(rentalIncome, otherIncome, expenses, dependents) {
    const totalIncome = rentalIncome + otherIncome - expenses
    const basicDeduction = BASIC_DEDUCTION_PER_PERSON * (1 + dependents)
    const taxableIncome = Math.max(0, totalIncome - basicDeduction)

    let calculatedTax = 0
    for (const bracket of TAX_BRACKETS) {
      if (taxableIncome <= bracket.limit) {
        calculatedTax = roundToWon(taxableIncome * bracket.rate - bracket.deduction)
        break
      }
    }

    calculatedTax = Math.max(0, calculatedTax)
    const localIncomeTax = roundToWon(calculatedTax * 0.1)
    const totalTax = calculatedTax + localIncomeTax
    const effectiveRate = totalIncome > 0 ? (totalTax / totalIncome) * 100 : 0

    return {
      totalIncome,
      basicDeduction,
      taxableIncome,
      calculatedTax,
      localIncomeTax,
      totalTax,
      effectiveRate: Math.round(effectiveRate * 100) / 100
    }
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  setupNumberInput(document.getElementById('rentalIncome'))
  setupNumberInput(document.getElementById('otherIncome'))
  setupNumberInput(document.getElementById('expenses'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const rentalIncome = parseInt(document.getElementById('rentalIncome').value.replace(/,/g, '')) || 0
    const otherIncome = parseInt(document.getElementById('otherIncome').value.replace(/,/g, '')) || 0
    const expenses = parseInt(document.getElementById('expenses').value.replace(/,/g, '')) || 0
    const dependents = parseInt(document.getElementById('dependents').value) || 0

    if (rentalIncome + otherIncome <= 0) {
      document.getElementById('errorText').textContent = '소득을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateIncomeTax(rentalIncome, otherIncome, expenses, dependents)

    document.getElementById('totalTax').textContent = formatManWon(result.totalTax)
    document.getElementById('effectiveRate').textContent = result.effectiveRate + '%'
    document.getElementById('totalIncome').textContent = formatManWon(result.totalIncome)
    document.getElementById('basicDeduction').textContent = formatManWon(result.basicDeduction)
    document.getElementById('taxableIncome').textContent = formatManWon(result.taxableIncome)
    document.getElementById('calculatedTax').textContent = formatManWon(result.calculatedTax)
    document.getElementById('localIncomeTax').textContent = formatManWon(result.localIncomeTax)

    resultsEl.classList.remove('hidden')
  })
</script>
