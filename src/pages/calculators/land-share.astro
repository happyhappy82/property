<script>
  const PYEONG_TO_SQM = 3.305785

  function formatNumber(num) {
    return num.toLocaleString('ko-KR', { maximumFractionDigits: 2 })
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9.]/g, '')
      if (raw && !isNaN(parseFloat(raw))) {
        this.value = raw
      } else if (raw === '') {
        this.value = ''
      }
    })
  }

  function calculateLandShare(totalLandArea, unitArea, totalBuildingArea) {
    const landShareSqm = totalLandArea * (unitArea / totalBuildingArea)
    const landSharePyeong = landShareSqm / PYEONG_TO_SQM
    const shareRatio = (unitArea / totalBuildingArea) * 100

    return {
      landShareSqm: landShareSqm.toFixed(2),
      landSharePyeong: landSharePyeong.toFixed(2),
      shareRatio: shareRatio.toFixed(2),
    }
  }

  setupNumberInput(document.getElementById('totalLandArea'))
  setupNumberInput(document.getElementById('unitArea'))
  setupNumberInput(document.getElementById('totalBuildingArea'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const totalLandArea = parseFloat(document.getElementById('totalLandArea').value) || 0
    const unitArea = parseFloat(document.getElementById('unitArea').value) || 0
    const totalBuildingArea = parseFloat(document.getElementById('totalBuildingArea').value) || 0

    if (totalLandArea <= 0) {
      document.getElementById('errorText').textContent = '대지면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (unitArea <= 0) {
      document.getElementById('errorText').textContent = '전용면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (totalBuildingArea <= 0) {
      document.getElementById('errorText').textContent = '전체연면적을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    if (unitArea > totalBuildingArea) {
      document.getElementById('errorText').textContent = '전용면적은 전체연면적보다 클 수 없습니다.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateLandShare(totalLandArea, unitArea, totalBuildingArea)

    document.getElementById('landShareSqm').textContent = formatNumber(parseFloat(result.landShareSqm)) + ' ㎡'
    document.getElementById('landSharePyeong').textContent = formatNumber(parseFloat(result.landSharePyeong)) + ' 평'
    document.getElementById('shareRatio').textContent = formatNumber(parseFloat(result.shareRatio)) + ' %'

    resultsEl.classList.remove('hidden')
  })
</script>
