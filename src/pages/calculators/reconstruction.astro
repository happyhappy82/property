<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      this.value = raw
    })
  }

  setupNumberInput(document.getElementById('approvalYear'))

  const BUILDING_STANDARDS = {
    'rc': { standard: 40, minimum: 30, name: '철근(철골)콘크리트조' },
    'brick': { standard: 30, minimum: 20, name: '연와조/조적조' },
    'wood': { standard: 20, minimum: 15, name: '목조' },
    'steel': { standard: 30, minimum: 20, name: '경량철골조' }
  }

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const buildingType = document.getElementById('buildingType').value
    const approvalYear = parseInt(document.getElementById('approvalYear').value) || 0

    const currentYear = new Date().getFullYear()

    if (approvalYear < 1900) {
      document.getElementById('errorText').textContent = '사용승인일은 1900년 이후여야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }
    if (approvalYear > currentYear) {
      document.getElementById('errorText').textContent = '사용승인일은 현재 연도를 초과할 수 없습니다.'
      errorEl.classList.remove('hidden')
      return
    }

    const elapsedYears = currentYear - approvalYear
    const { standard, minimum } = BUILDING_STANDARDS[buildingType]

    const reconstructionYear = approvalYear + standard
    const earlyReconstructionYear = approvalYear + minimum
    const remainingYears = Math.max(0, standard - elapsedYears)

    document.getElementById('reconstructionYear').textContent = formatNumber(reconstructionYear) + '년'
    document.getElementById('earlyReconstructionYear').textContent = formatNumber(earlyReconstructionYear) + '년'
    document.getElementById('standardYears').textContent = standard + '년'
    document.getElementById('minimumYears').textContent = minimum + '년'
    document.getElementById('elapsedYears').textContent = elapsedYears + '년'
    document.getElementById('remainingYears').textContent = remainingYears + '년'

    resultsEl.classList.remove('hidden')
  })
</script>
