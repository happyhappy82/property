<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function roundToWon(amount) {
    return Math.round(amount)
  }

  function calculateFireSafetyTax(taxableBase) {
    if (taxableBase <= 6000000) {
      return roundToWon(taxableBase * 0.0004)
    } else if (taxableBase <= 13000000) {
      return roundToWon(2400 + (taxableBase - 6000000) * 0.0005)
    } else if (taxableBase <= 26000000) {
      return roundToWon(5900 + (taxableBase - 13000000) * 0.0006)
    } else if (taxableBase <= 39000000) {
      return roundToWon(13700 + (taxableBase - 26000000) * 0.0008)
    } else if (taxableBase <= 64000000) {
      return roundToWon(24100 + (taxableBase - 39000000) * 0.001)
    } else {
      return roundToWon(49100 + (taxableBase - 64000000) * 0.0012)
    }
  }

  function calculateRegionalTax(buildingValue, buildingType, isSingleHousehold, isFireRisk, isLargeFireRisk) {
    const taxableBase = (buildingType === '주택' && isSingleHousehold) ? 0 : buildingValue
    const baseTax = calculateFireSafetyTax(taxableBase)

    let multiplier = 1
    if (isLargeFireRisk) {
      multiplier = 3
    } else if (isFireRisk) {
      multiplier = 2
    }

    const additionalTax = multiplier > 1 ? baseTax * (multiplier - 1) : 0
    const totalTax = baseTax + additionalTax

    return {
      taxableBase,
      baseTax,
      additionalTax,
      totalTax,
      multiplier
    }
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  setupNumberInput(document.getElementById('buildingValue'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const buildingValue = parseInt(document.getElementById('buildingValue').value.replace(/,/g, '')) || 0
    const buildingType = document.getElementById('buildingType').value
    const isSingleHousehold = document.getElementById('isSingleHousehold').checked
    const isFireRisk = document.getElementById('isFireRisk').checked
    const isLargeFireRisk = document.getElementById('isLargeFireRisk').checked

    if (buildingValue <= 0) {
      document.getElementById('errorText').textContent = '건물 시가표준액을 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateRegionalTax(buildingValue, buildingType, isSingleHousehold, isFireRisk, isLargeFireRisk)

    document.getElementById('totalTax').textContent = formatManWon(result.totalTax)
    document.getElementById('taxableBase').textContent = formatManWon(result.taxableBase)
    document.getElementById('baseTax').textContent = formatManWon(result.baseTax)
    document.getElementById('multiplier').textContent = result.multiplier + '배'
    document.getElementById('additionalTax').textContent = formatManWon(result.additionalTax)

    resultsEl.classList.remove('hidden')
  })
</script>
