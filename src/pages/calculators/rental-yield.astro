<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }
  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function setupPercentInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9.]/g, '')
      this.value = raw
    })
  }

  function roundToWon(amount) {
    return Math.round(amount)
  }

  function roundTo(num, decimals) {
    return Math.round(num * Math.pow(10, decimals)) / Math.pow(10, decimals)
  }

  setupNumberInput(document.getElementById('purchasePrice'))
  setupNumberInput(document.getElementById('otherCosts'))
  setupNumberInput(document.getElementById('deposit'))
  setupNumberInput(document.getElementById('monthlyRent'))
  setupNumberInput(document.getElementById('loanAmount'))
  setupPercentInput(document.getElementById('loanRate'))
  setupNumberInput(document.getElementById('annualExpenses'))

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const purchasePrice = parseInt(document.getElementById('purchasePrice').value.replace(/,/g, '')) || 0
    const otherCosts = parseInt(document.getElementById('otherCosts').value.replace(/,/g, '')) || 0
    const deposit = parseInt(document.getElementById('deposit').value.replace(/,/g, '')) || 0
    const monthlyRent = parseInt(document.getElementById('monthlyRent').value.replace(/,/g, '')) || 0
    const loanAmount = parseInt(document.getElementById('loanAmount').value.replace(/,/g, '')) || 0
    const loanRate = parseFloat(document.getElementById('loanRate').value) || 0
    const annualExpenses = parseInt(document.getElementById('annualExpenses').value.replace(/,/g, '')) || 0

    if (purchasePrice < 0) {
      document.getElementById('errorText').textContent = '매매가는 0 이상이어야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }
    if (otherCosts < 0 || deposit < 0 || monthlyRent < 0 || loanAmount < 0 || annualExpenses < 0) {
      document.getElementById('errorText').textContent = '모든 금액은 0 이상이어야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }
    if (loanRate < 0 || loanRate > 100) {
      document.getElementById('errorText').textContent = '대출이율은 0~100% 사이여야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }

    // 총투자금 = 매매가 + 기타비용
    const totalInvestment = roundToWon(purchasePrice + otherCosts)

    // 자기자본 = 총투자금 - 대출금 - 보증금
    const equity = roundToWon(totalInvestment - loanAmount - deposit)

    // 연간임대수입 = 월세 * 12
    const annualRentalIncome = roundToWon(monthlyRent * 12)

    // 연간대출이자 = 대출금 * 대출이율 / 100
    const annualLoanInterest = roundToWon(loanAmount * loanRate / 100)

    // 순수익 = 연간임대수입 - 연간대출이자 - 연간운영비용
    const netIncome = roundToWon(annualRentalIncome - annualLoanInterest - annualExpenses)

    // 총수익률 = (연간임대수입 / 총투자금) * 100
    const grossYield = totalInvestment > 0 ? roundTo((annualRentalIncome / totalInvestment) * 100, 2) : 0

    // 순수익률(ROI) = (순수익 / 자기자본) * 100
    const roi = equity > 0 ? roundTo((netIncome / equity) * 100, 2) : 0

    // 캡레이트 = ((연간임대수입 - 연간운영비용) / 총투자금) * 100
    const capRate = totalInvestment > 0 ? roundTo(((annualRentalIncome - annualExpenses) / totalInvestment) * 100, 2) : 0

    document.getElementById('grossYield').textContent = grossYield.toFixed(2) + '%'
    document.getElementById('roi').textContent = roi.toFixed(2) + '%'
    document.getElementById('capRate').textContent = capRate.toFixed(2) + '%'
    document.getElementById('totalInvestment').textContent = formatManWon(totalInvestment)
    document.getElementById('equity').textContent = formatManWon(equity)
    document.getElementById('annualRentalIncome').textContent = formatManWon(annualRentalIncome)
    document.getElementById('annualLoanInterest').textContent = formatManWon(annualLoanInterest)
    document.getElementById('annualExpensesDisplay').textContent = formatManWon(annualExpenses)
    document.getElementById('netIncome').textContent = formatManWon(netIncome)

    resultsEl.classList.remove('hidden')
  })
</script>
