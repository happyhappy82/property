<script>
  function formatNumber(num) {
    return num.toLocaleString('ko-KR')
  }
  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) { r += formatNumber(eok) + '억'; if (man > 0) r += ' ' + formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else if (man > 0) { r += formatNumber(man) + '만'; if (rem > 0) r += ' ' + formatNumber(rem); r += '원' }
    else { r += formatNumber(abs) + '원' }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function setupPercentInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9.]/g, '')
      this.value = raw
    })
  }

  function roundTo(num, decimals) {
    return Math.round(num * Math.pow(10, decimals)) / Math.pow(10, decimals)
  }

  setupNumberInput(document.getElementById('annualRentalIncome'))
  setupNumberInput(document.getElementById('loanAmount'))
  setupPercentInput(document.getElementById('interestRate'))

  const RTI_REQUIREMENTS = {
    '주거용': 1.25,
    '비주거용': 1.5
  }

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const annualRentalIncome = parseInt(document.getElementById('annualRentalIncome').value.replace(/,/g, '')) || 0
    const loanAmount = parseInt(document.getElementById('loanAmount').value.replace(/,/g, '')) || 0
    const interestRate = parseFloat(document.getElementById('interestRate').value) || 0
    const propertyType = document.getElementById('propertyType').value

    if (annualRentalIncome <= 0) {
      document.getElementById('errorText').textContent = '연간임대소득은 0보다 커야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }
    if (loanAmount <= 0) {
      document.getElementById('errorText').textContent = '대출금액은 0보다 커야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }
    if (interestRate <= 0) {
      document.getElementById('errorText').textContent = '대출이자율은 0보다 커야 합니다.'
      errorEl.classList.remove('hidden')
      return
    }

    const annualInterestCost = loanAmount * interestRate / 100
    const rtiRatio = roundTo(annualRentalIncome / annualInterestCost, 2)
    const requiredRti = RTI_REQUIREMENTS[propertyType]
    const isQualified = rtiRatio >= requiredRti

    const maxLoanAmount = Math.floor((annualRentalIncome / requiredRti) / (interestRate / 100))

    // Update qualified box styling
    const qualifiedBox = document.getElementById('qualifiedBox')
    const qualifiedTitle = document.getElementById('qualifiedTitle')
    const qualifiedLabel1 = document.getElementById('qualifiedLabel1')
    const qualifiedLabel2 = document.getElementById('qualifiedLabel2')

    if (isQualified) {
      qualifiedBox.className = 'bg-green-50 dark:bg-green-900/30 rounded-lg border border-green-200 dark:border-green-800 p-4'
      qualifiedTitle.className = 'text-sm font-medium text-green-800 dark:text-green-300 mb-3'
      qualifiedTitle.textContent = 'RTI 기준 적격'
      qualifiedLabel1.className = 'text-sm text-green-700 dark:text-green-300'
      qualifiedLabel2.className = 'text-sm text-green-700 dark:text-green-300'
      document.getElementById('rtiRatio').className = 'font-bold text-green-700 dark:text-green-300'
      document.getElementById('requiredRti').className = 'font-medium text-green-700 dark:text-green-300'
    } else {
      qualifiedBox.className = 'bg-red-50 dark:bg-red-900/30 rounded-lg border border-red-200 dark:border-red-800 p-4'
      qualifiedTitle.className = 'text-sm font-medium text-red-800 dark:text-red-300 mb-3'
      qualifiedTitle.textContent = 'RTI 기준 부적격'
      qualifiedLabel1.className = 'text-sm text-red-700 dark:text-red-300'
      qualifiedLabel2.className = 'text-sm text-red-700 dark:text-red-300'
      document.getElementById('rtiRatio').className = 'font-bold text-red-700 dark:text-red-300'
      document.getElementById('requiredRti').className = 'font-medium text-red-700 dark:text-red-300'
    }

    qualifiedLabel1.textContent = 'RTI 비율'
    qualifiedLabel2.textContent = '요구 RTI'

    document.getElementById('rtiRatio').textContent = rtiRatio.toFixed(2) + '배'
    document.getElementById('requiredRti').textContent = requiredRti.toFixed(2) + '배'
    document.getElementById('annualRentalIncomeDisplay').textContent = formatManWon(annualRentalIncome)
    document.getElementById('annualInterestCost').textContent = formatManWon(Math.round(annualInterestCost))
    document.getElementById('maxLoanAmount').textContent = formatManWon(maxLoanAmount)

    resultsEl.classList.remove('hidden')
  })
</script>
