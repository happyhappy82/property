<script>
  function formatNumber(num) {
    return Math.round(num).toLocaleString('ko-KR')
  }

  function formatManWon(amount) {
    const abs = Math.abs(Math.round(amount))
    const sign = amount < 0 ? '-' : ''
    const eok = Math.floor(abs / 100000000)
    const man = Math.floor((abs % 100000000) / 10000)
    const rem = abs % 10000
    let r = sign
    if (eok > 0) {
      r += formatNumber(eok) + '억'
      if (man > 0) r += ' ' + formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else if (man > 0) {
      r += formatNumber(man) + '만'
      if (rem > 0) r += ' ' + formatNumber(rem)
      r += '원'
    } else {
      r += formatNumber(abs) + '원'
    }
    return r
  }

  function setupNumberInput(el) {
    el.addEventListener('input', function() {
      const raw = this.value.replace(/[^0-9]/g, '')
      if (raw) { this.value = parseInt(raw).toLocaleString('ko-KR') }
      else { this.value = '' }
    })
  }

  function setupDecimalInput(el) {
    el.addEventListener('input', function() {
      let raw = this.value.replace(/[^0-9.]/g, '')
      const parts = raw.split('.')
      if (parts.length > 2) {
        raw = parts[0] + '.' + parts.slice(1).join('')
      }
      this.value = raw
    })
  }

  setupNumberInput(document.getElementById('principal'))
  setupDecimalInput(document.getElementById('annualRate'))

  const TAX_RATES = {
    'general': 0.154,
    'preferential': 0.095,
    'tax-free': 0,
  }

  function calculateSavingsInterest(principal, annualRate, months, interestType, taxType) {
    const rate = annualRate / 100
    const years = months / 12

    let interestBeforeTax = 0

    if (interestType === 'simple') {
      // 단리: P × r × t
      interestBeforeTax = principal * rate * years
    } else {
      // 복리: P × (1 + r/12)^n - P
      const compoundFactor = Math.pow(1 + rate / 12, months)
      interestBeforeTax = principal * compoundFactor - principal
    }

    const taxRate = TAX_RATES[taxType]
    const interestTax = interestBeforeTax * taxRate
    const interestAfterTax = interestBeforeTax - interestTax
    const totalAfterTax = principal + interestAfterTax

    return {
      interestBeforeTax: Math.round(interestBeforeTax),
      interestTax: Math.round(interestTax),
      interestAfterTax: Math.round(interestAfterTax),
      totalAfterTax: Math.round(totalAfterTax),
    }
  }

  document.getElementById('calcBtn').addEventListener('click', () => {
    const errorEl = document.getElementById('error')
    const resultsEl = document.getElementById('results')
    errorEl.classList.add('hidden')
    resultsEl.classList.add('hidden')

    const principal = parseInt(document.getElementById('principal').value.replace(/,/g, '')) || 0
    const annualRate = parseFloat(document.getElementById('annualRate').value) || 0
    const months = parseInt(document.getElementById('months').value) || 0
    const interestType = document.getElementById('interestType').value
    const taxType = document.getElementById('taxType').value

    if (principal <= 0 || annualRate < 0 || months <= 0) {
      document.getElementById('errorText').textContent = '모든 항목을 올바르게 입력해주세요.'
      errorEl.classList.remove('hidden')
      return
    }

    const result = calculateSavingsInterest(principal, annualRate, months, interestType, taxType)

    document.getElementById('totalAfterTax').textContent = formatManWon(result.totalAfterTax)
    document.getElementById('interestAfterTax').textContent = formatManWon(result.interestAfterTax)
    document.getElementById('principalDisplay').textContent = formatManWon(principal)
    document.getElementById('interestBeforeTax').textContent = formatManWon(result.interestBeforeTax)
    document.getElementById('interestTax').textContent = formatManWon(result.interestTax)

    resultsEl.classList.remove('hidden')
  })
</script>
